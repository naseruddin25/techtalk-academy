---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
const APPLICATIONS_OPEN = true;
const FORMSPREE_ENDPOINT = 'https://formspree.io/f/REPLACE_ME';
---

<BaseLayout 
  title="Apply | TechTalk Academy" 
  description="Take the first step toward your tech career. Apply to TechTalk Academy or request more information about our programs."
>
  <Hero
    title="Take the First Step"
    subtitle="Ready to transform your future? Let us know how we can help you get started."
    showCTA={false}
  />

  <section class="py-24 relative">
    <div class="absolute inset-0 vr-grid opacity-20"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div class="grid lg:grid-cols-5 gap-12">
          <!-- Form Section -->
          <div class="lg:col-span-3">
            <div class="glass-card p-8 md:p-10">
              <h2 class="text-2xl font-display font-bold text-white mb-2">Request Information</h2>
              <p class="text-slate-400 mb-8">Fill out the form below and our admissions team will reach out to you.</p>
              
              {APPLICATIONS_OPEN ? (
              <form id="contact-form" class="space-y-6" method="POST" action={FORMSPREE_ENDPOINT}>
                <!-- Honeypot field -->
                <input type="text" name="website" id="website" class="hidden" tabindex="-1" autocomplete="off" aria-hidden="true" />
                <!-- Name Fields -->
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-slate-300 mb-2">First Name *</label>
                    <input 
                      type="text" 
                      id="firstName" 
                      name="firstName" 
                      required
                      class="input-field"
                      placeholder="Enter your first name"
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-slate-300 mb-2">Last Name *</label>
                    <input 
                      type="text" 
                      id="lastName" 
                      name="lastName" 
                      required
                      class="input-field"
                      placeholder="Enter your last name"
                    />
                  </div>
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email Address *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="input-field"
                    placeholder="you@example.com"
                  />
                </div>

                <!-- Phone -->
                <div>
                  <label for="phone" class="block text-sm font-medium text-slate-300 mb-2">Phone Number</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                    class="input-field"
                    placeholder="Optional"
                  />
                </div>

                <!-- Program Interest -->
                <div>
                  <label for="program" class="block text-sm font-medium text-slate-300 mb-2">Program of Interest</label>
                  <select id="program" name="program" class="input-field">
                    <option value="">Select a program...</option>
                    <option value="cloud-devops">‚òÅÔ∏è Cloud & DevOps Engineering</option>
                    <option value="devsecops-cyber">üõ°Ô∏è DevSecOps & Cybersecurity</option>
                    <option value="software-qa">üíª Software & QA Engineering</option>
                    <option value="ai-foundations">ü§ñ AI Foundations</option>
                    <option value="unsure">Not sure yet</option>
                  </select>
                </div>

                <!-- How did you hear about us -->
                <div>
                  <label for="source" class="block text-sm font-medium text-slate-300 mb-2">How did you hear about us?</label>
                  <select id="source" name="source" class="input-field">
                    <option value="">Select an option...</option>
                    <option value="search">Search Engine (Google, Bing, etc.)</option>
                    <option value="social">Social Media</option>
                    <option value="referral">Friend or Family Referral</option>
                    <option value="employer">Employer</option>
                    <option value="workforce">Workforce Agency</option>
                    <option value="event">Event or Job Fair</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <!-- Current Status -->
                <div>
                  <label class="block text-sm font-medium text-slate-300 mb-3">Which best describes you?</label>
                  <div class="space-y-3">
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="career-changer" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Career changer looking to enter tech</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="student" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Current student or recent graduate</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="veteran" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Veteran transitioning to civilian workforce</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="upskill" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Currently employed, looking to upskill</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="employer" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Employer seeking talent pipelines</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                      <input type="radio" name="status" value="partner" class="w-4 h-4 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                      <span class="text-slate-300 group-hover:text-white transition-colors">Potential partner organization</span>
                    </label>
                  </div>
                </div>

                <!-- Message -->
                <div>
                  <label for="message" class="block text-sm font-medium text-slate-300 mb-2">Questions or Comments</label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="4"
                    class="input-field resize-none"
                    placeholder="Tell us about your goals or any questions you have..."
                  ></textarea>
                </div>

                <!-- Consent -->
                <div>
                  <label class="flex items-start gap-3 cursor-pointer group">
                    <input type="checkbox" name="consent" required class="w-4 h-4 mt-1 text-cyan-500 bg-slate-800 border-slate-600 focus:ring-cyan-500"/>
                    <span class="text-sm text-slate-400 group-hover:text-slate-300 transition-colors">
                      I agree to receive communications from TechTalk Academy about programs, events, and opportunities. I understand I can unsubscribe at any time. *
                    </span>
                  </label>
                </div>

                <!-- Submit -->
                <div class="pt-4">
                  <button type="submit" class="btn-primary w-full justify-center text-lg">
                    Submit Request
                  </button>
                </div>

                <!-- Inline error -->
                <p id="form-error" class="hidden text-amber-400 text-sm mt-4" role="alert" aria-live="polite">
                  Something went wrong. Please try again in a moment.
                </p>
              </form>
              ) : (
                <div class="glass-card p-6 text-center">
                  <h3 class="font-display text-xl text-white mb-2">Applications opening soon</h3>
                  <p class="text-slate-300 mb-4">Leave your email and we‚Äôll notify you as soon as we open.</p>
                  <form id="interest-form" class="flex flex-col sm:flex-row gap-3 justify-center" method="POST" action={FORMSPREE_ENDPOINT}>
                    <input type="email" name="email" required class="input-field flex-1" placeholder="you@example.com" />
                    <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" aria-hidden="true" />
                    <button class="btn-primary">Notify Me</button>
                  </form>
                </div>
              )}

              <!-- Form Success Message (hidden by default) -->
              <div id="form-success" class="hidden text-center py-12">
                <div class="w-20 h-20 rounded-full bg-green-500/20 flex items-center justify-center mx-auto mb-6">
                  <svg class="w-10 h-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <h3 class="text-2xl font-display font-bold text-white mb-4">Thank You!</h3>
                <p class="text-slate-300">
                  We've received your request. Our admissions team will be in touch within 2 business days.
                </p>
              </div>
              <!-- What happens after you apply -->
              <div class="mt-10 glass-card p-6">
                <h3 class="text-lg font-display font-bold text-white mb-2">What happens after you apply</h3>
                <p class="text-slate-300 text-sm">You‚Äôll get a confirmation email and we‚Äôll reach out within 1‚Äì2 business days to schedule a brief consultation.</p>
              </div>
            </div>
          </div>

          <!-- Info Sidebar -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Quick Info -->
            <div class="glass-card p-6">
              <h3 class="text-lg font-display font-bold text-white mb-4">What Happens Next?</h3>
              <ol class="space-y-4">
                <li class="flex gap-4">
                  <div class="w-8 h-8 rounded-full bg-cyan-500/20 flex items-center justify-center text-cyan-400 font-bold shrink-0">1</div>
                  <div>
                    <p class="text-white font-medium">We Review Your Info</p>
                    <p class="text-sm text-slate-400">Our team reviews your submission within 2 business days.</p>
                  </div>
                </li>
                <li class="flex gap-4">
                  <div class="w-8 h-8 rounded-full bg-purple-500/20 flex items-center justify-center text-purple-400 font-bold shrink-0">2</div>
                  <div>
                    <p class="text-white font-medium">Personalized Consultation</p>
                    <p class="text-sm text-slate-400">We'll schedule a call to discuss your goals and answer questions.</p>
                  </div>
                </li>
                <li class="flex gap-4">
                  <div class="w-8 h-8 rounded-full bg-amber-500/20 flex items-center justify-center text-amber-400 font-bold shrink-0">3</div>
                  <div>
                    <p class="text-white font-medium">Get Started</p>
                    <p class="text-sm text-slate-400">Choose your program and begin your learning journey.</p>
                  </div>
                </li>
              </ol>
            </div>

            <!-- Contact Options -->
            <div class="glass-card p-6">
              <h3 class="text-lg font-display font-bold text-white mb-4">Other Ways to Connect</h3>
              <div class="space-y-4">
                <a href="mailto:admissions@techtalkacademy.org" class="flex items-center gap-3 text-slate-300 hover:text-cyan-400 transition-colors group">
                  <div class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center group-hover:bg-cyan-500/20 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <span>admissions@techtalkacademy.org</span>
                </a>
                <div class="pt-2 border-t border-white/10">
                  <p class="text-sm text-slate-400">
                    Questions before applying? Email us and we'll respond within 1‚Äì2 business days.
                  </p>
                </div>
              </div>
            </div>

            <!-- FAQ Preview -->
            <div class="glass-card p-6">
              <h3 class="text-lg font-display font-bold text-white mb-4">Common Questions</h3>
              <div class="space-y-4 text-sm">
                <div>
                  <p class="text-white font-medium mb-1">Do I need a VR headset?</p>
                  <p class="text-slate-400">No! VR-enhanced learning is optional. All programs are accessible via traditional methods.</p>
                </div>
                <div>
                  <p class="text-white font-medium mb-1">Is financial assistance available?</p>
                  <p class="text-slate-400">Yes, we work with workforce agencies and offer various funding options. <a href="/funding" class="text-cyan-400 hover:underline">Learn more</a></p>
                </div>
                <div>
                  <p class="text-white font-medium mb-1">What's the time commitment?</p>
                  <p class="text-slate-400">Programs vary based on your goals. We'll discuss options during your consultation.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Formspree submission with inline success/error and honeypot
    const form = document.getElementById('contact-form');
    const success = document.getElementById('form-success');
    const errorMsg = document.getElementById('form-error');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const hpInput = document.getElementById('website');
      const hp = hpInput && 'value' in hpInput ? hpInput.value : '';
      if (hp && hp.trim() !== '') {
        // Honeypot filled: silently succeed
        form.classList.add('hidden');
        if (success) success.classList.remove('hidden');
        (form as HTMLFormElement).reset?.();
        return;
      }

      const endpoint = form.getAttribute('action');
      const data = new FormData(form as HTMLFormElement);

      try {
        const res = await fetch(endpoint as string, {
          method: 'POST',
          body: data,
          headers: { 'Accept': 'application/json' }
        });
        if (res.ok) {
          form.classList.add('hidden');
          errorMsg?.classList.add('hidden');
          success?.classList.remove('hidden');
          (form as HTMLFormElement).reset();
        } else {
          errorMsg?.classList.remove('hidden');
        }
      } catch (err) {
        errorMsg?.classList.remove('hidden');
      }
    });
  </script>
</BaseLayout>
