---
import navigation from '../data/navigation.json';
---

<footer class="relative mt-32">
  <!-- Gradient separator -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-electric-cyan/30 to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-electric-cyan to-electric-purple flex items-center justify-center">
            <span class="text-xl font-bold text-navy-950">T</span>
          </div>
          <div class="flex flex-col">
            <span class="font-display font-bold text-lg leading-tight text-white">TechTalk</span>
            <span class="text-xs text-electric-cyan font-medium tracking-wider">ACADEMY</span>
          </div>
        </a>
        <p class="text-gray-400 mb-6 max-w-sm">
          Immersive technology education preparing the next generation of tech professionals through VR-enabled, hands-on learning experiences.
        </p>
        <div class="space-y-2 text-sm mb-6">
          <p class="text-gray-400">
            <span class="text-gray-500">General:</span> <a href="mailto:info@techtalkacademy.org" class="hover:text-electric-cyan transition-colors">info@techtalkacademy.org</a>
          </p>
          <p class="text-gray-400">
            <span class="text-gray-500">Admissions:</span> <a href="mailto:admissions@techtalkacademy.org" class="hover:text-electric-cyan transition-colors">admissions@techtalkacademy.org</a>
          </p>
          <p class="text-gray-400">
            <span class="text-gray-500">Support:</span> <a href="mailto:support@techtalkacademy.org" class="hover:text-electric-cyan transition-colors">support@techtalkacademy.org</a>
          </p>
          <p class="text-gray-400">
            <span class="text-gray-500">Funding:</span> <a href="mailto:funding@techtalkacademy.org" class="hover:text-electric-cyan transition-colors">funding@techtalkacademy.org</a>
          </p>
        </div>
        <div class="flex gap-4">
          <a href="#" class="w-10 h-10 glass-card flex items-center justify-center text-gray-400 hover:text-electric-cyan transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 glass-card flex items-center justify-center text-gray-400 hover:text-electric-cyan transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 glass-card flex items-center justify-center text-gray-400 hover:text-electric-cyan transition-colors" aria-label="YouTube">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Programs -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Programs</h4>
        <ul class="space-y-3">
          {navigation.footerNav.programs.map((item) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-electric-cyan transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Company</h4>
        <ul class="space-y-3">
          {navigation.footerNav.company.map((item) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-electric-cyan transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Resources</h4>
        <ul class="space-y-3">
          {navigation.footerNav.resources.map((item) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-electric-cyan transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        Â© {new Date().getFullYear()} TechTalk Academy. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="/privacy" class="text-gray-500 hover:text-gray-300 transition-colors">Privacy Policy</a>
        <a href="/accessibility" class="text-gray-500 hover:text-gray-300 transition-colors">Accessibility</a>
      </div>
    </div>
  </div>
</footer>
