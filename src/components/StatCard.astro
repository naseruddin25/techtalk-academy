---
interface Props {
  value: string;
  label: string;
  description: string;
  icon: string;
}

const { value, label, description, icon } = Astro.props;
---

<div class="glass-card-hover p-8 text-center group">
  <div class="text-4xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
    {icon}
  </div>
  <div class="stat-number mb-2">{value}</div>
  <div class="font-display font-semibold text-white mb-2">{label}</div>
  <div class="text-gray-400 text-sm">{description}</div>
</div>
