---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="glass-card-hover p-5 group">
  <div class="flex items-start gap-3">
    <div class="w-2 h-2 mt-2 rounded-full bg-electric-cyan flex-shrink-0 group-hover:shadow-glow-cyan transition-shadow"></div>
    <div>
      <h4 class="font-display font-semibold text-white mb-1">{title}</h4>
      <p class="text-gray-400 text-sm">{description}</p>
    </div>
  </div>
</div>
