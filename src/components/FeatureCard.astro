---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="glass-card-hover p-6 group">
  <div class="text-3xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
    {icon}
  </div>
  <h3 class="font-display font-semibold text-white mb-2">{title}</h3>
  <p class="text-gray-400 text-sm leading-relaxed">{description}</p>
</div>
