---
interface Props {
  id: string;
  title: string;
  emoji: string;
  tagline: string;
  description: string;
  skills: string[];
  outcomes: string[];
  color: 'cyan' | 'purple' | 'blue' | 'gold';
}

const { id, title, emoji, tagline, description, skills, outcomes, color } = Astro.props;

const colorClasses = {
  cyan: 'bg-gradient-to-br from-electric-cyan to-electric-blue border-electric-cyan/20 hover:border-electric-cyan/40',
  purple: 'bg-gradient-to-br from-electric-purple to-pink-500 border-electric-purple/20 hover:border-electric-purple/40',
  blue: 'bg-gradient-to-br from-electric-blue to-indigo-500 border-electric-blue/20 hover:border-electric-blue/40',
  gold: 'bg-gradient-to-br from-gold-400 to-orange-500 border-gold-400/20 hover:border-gold-400/40'
};

const glowClasses = {
  cyan: 'shadow-glow-cyan',
  purple: 'shadow-glow-purple',
  blue: 'shadow-glow-cyan',
  gold: 'shadow-glow-gold'
};
---

<article id={id} class={`glass-card relative transition-all duration-500 bg ${colorClasses[color]} hover:${glowClasses[color]}`}>
  <!-- Top gradient bar -->
  <div class={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r ${colorClasses[color].split(' ')[1]} ${colorClasses[color].split(' ')[2]}`}></div>
  
  <div class="p-8 md:p-10 relative z-10">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-6">
      <span class="text-4xl">{emoji}</span>
      <div>
        <h3 class="font-display text-2xl font-bold text-white mb-1">{title}</h3>
        <p class="text-sm font-medium text-white">
          {tagline}
        </p>
      </div>
    </div>

    <!-- Description -->
    <p class="text-gray-100 mb-8 leading-relaxed">
      {description}
    </p>

    <!-- Skills -->
    <div class="mb-8">
      <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Skills You'll Build</h4>
      <div class="flex flex-wrap gap-2">
        {skills.map((skill) => (
          <span class="px-3 py-1.5 text-sm bg-white/15 border border-white/30 rounded-lg text-white font-medium">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- Outcomes -->
    <div>
      <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">What You'll Achieve</h4>
      <ul class="space-y-3">
        {outcomes.map((outcome) => (
          <li class="flex items-start gap-3 text-gray-100">
            <svg class={`w-5 h-5 mt-0.5 flex-shrink-0 text-gradient`} fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            {outcome}
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>

<style>
  article::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 40%, rgba(0, 0, 0, 0.5) 100%);
    pointer-events: none;
    z-index: 0;
  }
</style>
